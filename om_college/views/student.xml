<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_student_kanban" model="ir.ui.view">
        <field name="name">student.kanban</field>
        <field name="model">college.students</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="student_number"/>
                <field name="address"/>
                <field name="gender"/>
                <field name="college_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_details">
                                <ul>
                                    <li>
                                        Name:
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Student number:
                                        <field name="student_number"/>
                                    </li>
                                    <li>
                                        Address:
                                        <field name="address"/>
                                    </li>
                                    <li>
                                        Gender:
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        <field name="college_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">college.students</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_number"/>
                        <field name="address"/>
                        <field name="gender"/>
                        <field name="college_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">college.student.tree</field>
        <field name="model">college.students</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_number"/>
                <field name="address"/>
                <field name="gender"/>
                <field name="college_id"/>
            </tree>
        </field>
    </record>

    <!--    action-->
    <record id="student_action" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">college.students</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="view face">
                students details here!!!
            </p>
        </field>
    </record>

    <record id="college_extends_form_view" model="ir.ui.view">
        <field name="name">college extends</field>
        <field name="model">college.colleges</field>
        <field name="inherit_id" ref="view_college_form"/>
        <field name="arch" type="xml">
            <field name="address" position="after">
                <field name="students"/>
            </field>
        </field>
    </record>

    <menuitem id="college_root"
              name="college"
              sequence="1"/>

    <menuitem id="college_students_root"
              name="student"
              parent="college_root"
              sequence="1"/>

    <menuitem id="college_student_root"
              name="student"
              parent="college_students_root"
              action="student_action"
              sequence="1"/>

</odoo>