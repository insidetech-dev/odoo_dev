<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="patient_id"/>
            </tree>
        </field>
    </record>


    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                        </group>

                        <group>
                            <field name="gender"/>
                            <field name="patient_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="doctor_action" model="ir.actions.act_window">
        <field name="name">doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="view face">
                hospital doctor here!!!
            </p>
        </field>
    </record>

    <menuitem id="hospital_root"
              name="hospital"
              sequence="1"/>

    <menuitem id="hospital_doctor_root"
              name="doctor"
              parent="hospital_root"
              sequence="1"/>

    <menuitem id="hospital_doctor"
              name="doctor"
              parent="hospital_doctor_root"
              action="doctor_action"
              sequence="1"/>

    <record id="patient_extends_form_view" model = "ir.ui.view">
        <field name="name">patient extends</field>
        <field name="model">hospital.patient</field>
        <field name="inherit_id" ref="view_patient_form"/>
        <field name="arch" type="xml">
            <field name="age" position="after">
                <field name="patients"/>

            </field>
        </field>
    </record>

</odoo>


